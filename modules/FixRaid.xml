<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <!-- Main Frame -->
    <Frame name="FixRaidFrame" parent="UIParent" enableMouse="true" movable="true" clampedToScreen="true" frameStrata="DIALOG" hidden="true">
        <Size>
            <AbsDimension x="600" y="500"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Scripts>
            <OnMouseDown>
                if self:IsMovable() then self:StartMoving() end
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>

        <!-- Background Texture -->
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="FixRaidFrameBackground" setAllPoints="true">
                    <Color r="0.1" g="0.1" b="0.1" a="0.9"/>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture name="FixRaidFrameBorder" setAllPoints="true">
                    <Color r="0" g="0" b="0" a="1"/>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString name="FixRaidLabel" inherits="GameFontHighlight" justifyH="CENTER" justifyV="MIDDLE">
                    <Size>
                        <AbsDimension x="400" y="64"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOP" relativePoint="TOP" x="0" y="-20"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <!-- Buttons -->
        <Frames>
            <Button name="FixRaidSortButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" x="20" y="-100"/>
                </Anchors>
            </Button>

            <Button name="FixRaidSplitButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="FixRaidSortButton" relativePoint="RIGHT" x="20" y="0"/>
                </Anchors>
            </Button>

            <Button name="FixRaidLastButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="FixRaidSplitButton" relativePoint="RIGHT" x="20" y="0"/>
                </Anchors>
            </Button>

            <Button name="FixRaidCancelButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="FixRaidLastButton" relativePoint="RIGHT" x="20" y="0"/>
                </Anchors>
            </Button>

            <Button name="FixRaidClear1Button" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="FixRaidSortButton" relativePoint="BOTTOMLEFT" x="0" y="-20"/>
                </Anchors>
            </Button>

            <Button name="FixRaidClear2Button" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="FixRaidClear1Button" relativePoint="RIGHT" x="20" y="0"/>
                </Anchors>
            </Button>

            <Button name="FixRaidSkip1Button" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="FixRaidClear2Button" relativePoint="RIGHT" x="20" y="0"/>
                </Anchors>
            </Button>

            <Button name="FixRaidSkip2Button" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="FixRaidSkip1Button" relativePoint="RIGHT" x="20" y="0"/>
                </Anchors>
            </Button>

            <Button name="FixRaidTmrhButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="FixRaidClear1Button" relativePoint="BOTTOMLEFT" x="0" y="-20"/>
                </Anchors>
            </Button>

            <Button name="FixRaidThmrButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="FixRaidTmrhButton" relativePoint="RIGHT" x="20" y="0"/>
                </Anchors>
            </Button>

            <Button name="FixRaidNosortButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="FixRaidThmrButton" relativePoint="RIGHT" x="20" y="0"/>
                </Anchors>
            </Button>

            <Button name="FixRaidCoreButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="FixRaidTmrhButton" relativePoint="BOTTOMLEFT" x="0" y="-20"/>
                </Anchors>
            </Button>

            <Button name="FixRaidMeterButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT" relativeTo="FixRaidCoreButton" relativePoint="RIGHT" x="20" y="0"/>
                </Anchors>
            </Button>

            <!-- Close Button -->
            <Button name="FixRaidCloseButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="120" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" x="-20" y="20"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        self:GetParent():Hide();
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>